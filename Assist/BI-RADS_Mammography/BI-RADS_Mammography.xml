 <DataElements>
         <ChoiceDataElement Id="question" IsRequired="true" DisplaySequence="1">
			<Label>What is the kind of examination?</Label>
			<ChoiceInfo>
				<Choice>
					<Value>screening</Value>
					<Label>Screening examination</Label>
				</Choice>
				<Choice>
					<Value>diagostic</Value>
					<Label>Diagnostic examination</Label>
				</Choice>
			</ChoiceInfo>
		 </ChoiceDataElement>
 
 
		<ChoiceDataElement Id="breastcomposition" IsRequired="true" DisplaySequence="2">
			<Label>What is the breast composition?</Label>
			<Hint>Density and composition evidenced from mammography reports</Hint>
			<ChoiceInfo>
				<Choice>
					<Value>fatty</Value>
					<Label>a. The breasts are almost entirely fatty.</Label>
				 </Choice>
				<Choice>
					<Value>fibrograndular</Value>
					<Label>b. There are scattered areas of fibrograndular density.</Label>
				</Choice>
				<Choice>
					<Value>heterodense</Value>
					<Label>c. The breasts are heterogeneously dense, which may obscure small masses.</Label>
				</Choice>
				<Choice>
					<Value>extrdense</Value>
					<Label>d. The breasts are extremely dense, which lowers the sensitivity of mammography.</Label>
				</Choice>
			</ChoiceInfo>
		 </ChoiceDataElement>
		 
		 
		 
		 
		 <ChoiceDataElement Id="shape" IsRequired="true" DisplaySequence="3">
			<Label>Shape</Label>
			<ChoiceInfo>
				<Choice>
					<Value>oval</Value>
					<Label>Oval</Label>
				 </Choice>
				<Choice>
					<Value>round</Value>
					<Label>Round</Label>
				 </Choice>
				<Choice>
					<Value>irregular</Value>
					<Label>Irregular</Label>
				 </Choice>
			 </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="margin" IsRequired="true" DisplaySequence="4">
			<Label>Margin</Label>
			<ChoiceInfo>
				<Choice>
					<Value>circum</Value>
					<Label>Circumscribed</Label>
				 </Choice>
				<Choice>
					<Value>obscure</Value>
					<Label>Obscured</Label>
				 </Choice>
				<Choice>
					<Value>micro</Value>
					<Label>Microlobulated</Label>
				 </Choice>
				 <Choice>
					<Value>indistinct</Value>
					<Label>Indistinct</Label>
				 </Choice>
				<Choice>
					<Value>spiculated</Value>
					<Label>Spiculated</Label>
				 </Choice>
				 			 
			 </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="density" IsRequired="true" DisplaySequence="5">
			<Label>Density</Label>
			<ChoiceInfo>
				<Choice>
					<Value>highden</Value>
					<Label>High density</Label>
				 </Choice>
				<Choice>
					<Value>eqden</Value>
					<Label>Equal Density</Label>
				 </Choice>
				<Choice>
					<Value>lowden</Value>
					<Label>Low Density</Label>
				 </Choice>
				 <Choice>
					<Value>fat</Value>
					<Label>Fat-containing</Label>
				 </Choice>
		   </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="benigncalci" IsRequired="true" DisplaySequence="6">
			<Label> Calcification : Typically benign</Label>
			<ChoiceInfo>
				<Choice>
					<Value>skin</Value>
					<Label>Skin</Label>
				 </Choice>
				<Choice>
					<Value>vascular</Value>
					<Label>Vascular</Label>
				 </Choice>
				<Choice>
					<Value>coarse</Value>
					<Label>Coarse or popcorn-like</Label>
				 </Choice>
				 <Choice>
					<Value>rod</Value>
					<Label>Large rod-like</Label>
				 </Choice>
				 <Choice>
					<Value>rim</Value>
					<Label>Rim</Label>
				 </Choice>
				 <Choice>
					<Value>dystrophic</Value>
					<Label>Dystrophic</Label>
				 </Choice>
				 <Choice>
					<Value>milkcal</Value>
					<Label>Milk of calcium</Label>
				 </Choice>
				 <Choice>
					<Value>suture</Value>
					<Label>Suture</Label>
				 </Choice>
		   </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="suspiciouscalci" IsRequired="true" DisplaySequence="7">
			<Label> Calcification : Suspicious Morphology</Label>
			<ChoiceInfo>
				<Choice>
					<Value>amorphous</Value>
					<Label>Amorphous</Label>
				 </Choice>
				<Choice>
					<Value>coarsehetero</Value>
					<Label>Coarse heterogeneous</Label>
				 </Choice>
				<Choice>
					<Value>finepheo</Value>
					<Label>Fine pheomorphic</Label>
				 </Choice>
				 <Choice>
					<Value>finelinear</Value>
					<Label>Fine linear or fine-linear branching</Label>
				 </Choice>
		   </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="distributioncalci" IsRequired="true" DisplaySequence="8">
			<Label> Calcification : Distribution</Label>
			<ChoiceInfo>
				<Choice>
					<Value>diffuse</Value>
					<Label>Diffuse</Label>
				 </Choice>
				<Choice>
					<Value>regional</Value>
					<Label>Regional</Label>
				 </Choice>
				<Choice>
					<Value>grouped</Value>
					<Label>Grouped</Label>
				 </Choice>
				 <Choice>
					<Value>linear</Value>
					<Label>Linear</Label>
				 </Choice>
				 <Choice>
					<Value>segmental</Value>
					<Label>Segmental</Label>
				 </Choice>
		   </ChoiceInfo>
		</ChoiceDataElement>
		
		
		<ChoiceDataElement Id="archidistortasymm" IsRequired="true" DisplaySequence="9">
			<Label>Architectural distortion </Label>
			<ChoiceInfo>
				<Choice>
					<Value>asymmetry</Value>
					<Label>Asymmetry</Label>
				 </Choice>
				<Choice>
					<Value>globalasymmetry</Value>
					<Label>Global Asymmetry</Label>
				 </Choice>
				<Choice>
					<Value>focalasymmetry</Value>
					<Label>Focal Asymmetry</Label>
				 </Choice>
				 <Choice>
					<Value>developasymmetry</Value>
					<Label>Developing Asymmetry</Label>
				 </Choice>
		   </ChoiceInfo>
		</ChoiceDataElement>
	
		
</DataElements>		 

<Rules>
		<DecisionPoint Id="HelloAssist">
			<Label>Hello Assist</Label>
			<Branch>
				<Label>No follow-up required</Label>
				<SectionIf DataElementId = "breastcomposition" > </SectionIf>
				<EndPointRef EndPointId="Cat0" ></EndPointRef>
			</Branch>
			
		
		</DecisionPoint>
	</Rules>





	<EndPoints>

	
	<TemplatePartial Id="BiTemplate">

			<Branch>			
				<AndCondition>
				    <SectionIf DataElementId="question"></SectionIf>
					<SectionIf DataElementId="breastcomposition"></SectionIf>
					<SectionIf DataElementId="shape"></SectionIf>
					<SectionIf DataElementId="margin"></SectionIf>
					<SectionIf DataElementId="density"></SectionIf>
					<SectionIf DataElementId="benigncalci"></SectionIf>
					<SectionIf DataElementId="suspiciouscalci"></SectionIf>
					<SectionIf DataElementId="distributioncalci"></SectionIf>
					<SectionIf DataElementId="archidistortasymm"></SectionIf>
					
				</AndCondition>
				<ReportText Type="PlainText">Examination is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="question"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The breast composition is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="breastcomposition"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The shape of the nodule is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="shape"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The margin of nodule is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="margin"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The density of the nodule is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="density"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The nature of the calcification is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="benigncalci"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The morphology of the suspicion is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="suspiciouscalci"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The distribution of the calcification is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="distributioncalci"></ReportText>
				<ReportText Type="Newline"/>
				<ReportText Type="PlainText">The distortion of the calcification is </ReportText>
				<ReportText Type="InsertDataElementValue" Value="archidistortasymm"></ReportText>
				<ReportText Type="Newline"/>
			</Branch>
			
		</TemplatePartial>
		<EndPoint Id="Cat0">
			<Label>Cat 0</Label>
			<ReportSections>
				<ReportSection SectionId="findings">
					<Branch>
					    <ReportText Type="InsertPartialTemplate" Value="BiTemplate"></ReportText>
						<ReportText Type="Newline" />
					</Branch>
				</ReportSection>
			</ReportSections>
		</EndPoint>


        <EndPoint Id="Cat1">
			<Label>Cat 1</Label>
			<ReportSections>
				<ReportSection SectionId="findings">
					<Branch>
						<ReportText Type="PlainText">Category 1: Negative.</ReportText>
						<ReportText Type="Newline" />
					</Branch>
				</ReportSection>
				<ReportSection SectionId="Recommendation">
					<Branch>
						<ReportText Type="PlainText">Routine mammography screening.</ReportText>
						<ReportText Type="Newline" />
					</Branch>
				</ReportSection>
			</ReportSections>
		</EndPoint>

    <EndPoint Id="Cat2">
			<Label>Cat 2</Label>
			<ReportSections>
				<ReportSection SectionId="findings">
