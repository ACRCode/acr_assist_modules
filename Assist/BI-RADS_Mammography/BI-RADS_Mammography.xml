						<ReportText Type="PlainText">Category 2: Benign.</ReportText>
						<ReportText Type="Newline" />
					</Branch>
				</ReportSection>
				<ReportSection SectionId="Recommendation">
					<Branch>
						<ReportText Type="PlainText">Routine mammography screening.</ReportText>
						<ReportText Type="Newline" />
					</Branch>
				</ReportSection>
			</ReportSections>
		</EndPoint>
		
	

       <EndPoint Id="Cat3">
			<Label>Cat 3</Label>
			<ReportSections>
