<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../XML Schema/ACRAssist_xml_schema.rnc" type="application/relax-ng-compact-syntax"?>
<ReportingModule>
	<Metadata>
		<Label>Evaluation of Cardiac Amyloid</Label>
		<ID>Evaluation of Cardiac Amyloid</ID>
		<SchemaVersion>1.0</SchemaVersion>
		<ModuleVersion>1.0</ModuleVersion>
		<Info>
			<Description>This module describes the Common Data elements and Macros for Evaluation of Cardiac Amyloid</Description>
			
			<References>
				<Citation Url="http://radelement.org/"> CDE URL </Citation> 
			</References>
			
			<Diagrams>
				<Diagram DisplaySequence="1" IsKeyDiagram="true">
					<Location>keydiagram.jpg</Location>
					<Label>Evaluation of Cardiac Amyloid key image</Label>
				</Diagram>
			</Diagrams>
			<Contact>
				<Name>ACR Assist</Name>
				<Email>acr-assist@acr.org</Email>
				<Institution>American College of Radiology</Institution>
			</Contact>
		</Info>
		<ReportCitationText>C</ReportCitationText>
        <ApplicableSexes Value="Both"></ApplicableSexes>
		
	</Metadata>


  <DataElements>
  
   <GlobalValue Id="conditionConst">10</GlobalValue>
  
   <NumericDataElement Id="Age" IsRequired="true" DisplaySequence="1">
			<Label>Age of the patient</Label>
			<Minimum>20.00</Minimum>
			<Maximum>120.00</Maximum>
		</NumericDataElement>
		
		 <ChoiceDataElement Id="Sex" IsRequired="true" DisplaySequence="2">
			<Label>Sex of the patient</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Female</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Male</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		 <ChoiceDataElement Id="rib" IsRequired="true" DisplaySequence="3">
			<Label>Rib trauma</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Absent</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Present</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<ChoiceDataElement Id="mets" IsRequired="true" DisplaySequence="4">
			<Label>Rib/bone metastases</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<ChoiceDataElement Id="dex" IsRequired="true" DisplaySequence="5">
			<Label>Dextrocardia</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<NumericDataElement Id="rate" IsRequired="true" DisplaySequence="6">
			<Label>Heart rate</Label>
			<Minimum>20.00</Minimum>
			<Maximum>160.00</Maximum>
		</NumericDataElement>
		
		<NumericDataElement Id="lv" IsRequired="true" DisplaySequence="7">
			<Label>LV wall thickness</Label>
			<Minimum>0.00</Minimum>
			<Maximum>1000.00</Maximum>
		</NumericDataElement>
		
		<NumericDataElement Id="volume" IsRequired="true" DisplaySequence="8">
			<Label>LV  end-diastolic volume</Label>
			<Minimum>0.00</Minimum>
			<Maximum>1000.00</Maximum>
		</NumericDataElement>
		
		<NumericDataElement Id="fraction" IsRequired="true" DisplaySequence="9">
			<Label>LV ejection fraction</Label>
			<Minimum>0.00</Minimum>
			<Maximum>1000.00</Maximum>
		</NumericDataElement>
		
		<ChoiceDataElement Id="atrial" IsRequired="true" DisplaySequence="10">
			<Label>Atrial enlargement</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<ChoiceDataElement Id="peri" IsRequired="true" DisplaySequence="11">
			<Label>Pericaridal effusion</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<ChoiceDataElement Id="pleural" IsRequired="true" DisplaySequence="12">
			<Label>Pleural effusions</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
		
		<ChoiceDataElement Id="hyper" IsRequired="true" DisplaySequence="13">
			<Label>Left ventricular hypertrophy</Label>
			<ChoiceInfo>
				<Choice>
					<Value>1</Value>
					<Label>Present</Label>	
				</Choice>
				<Choice>
					<Value>2</Value>
					<Label>Absent</Label>
				</Choice>			
			</ChoiceInfo>			
		</ChoiceDataElement>
	
	<ChoiceDataElement Id="myo" IsRequired="true" DisplaySequence="14">
      <Label>Myocardial Tc-99m PYP cardiac uptake</Label>
      <ChoiceInfo>
        <Choice>
          <Value>0</Value>
          <Label>No uptake and normal bone uptake</Label>
        </Choice>
		<Choice>
          <Value>1</Value>
          <Label>Uptake less than rib uptake</Label>
        </Choice>
        <Choice>
          <Value>2</Value>
          <Label>Uptake equal to rib uptake</Label>
        </Choice>
		<Choice>
          <Value>3</Value>
          <Label>Uptake greater than rib uptake with mild/absent rib uptake</Label>
        </Choice>
		<Choice>
          <Value>4</Value>
          <Label>Unknown</Label>
        </Choice>
      </ChoiceInfo>
    </ChoiceDataElement>
	
	<NumericDataElement Id="ratio" IsRequired="true" DisplaySequence="15">
			<Label>Heart to conralateral ratio</Label>
			<Minimum>0.00</Minimum>
			<Maximum>1000.00</Maximum>
		</NumericDataElement>
	
    <ChoiceDataElement Id="amyloid" IsRequired="true" DisplaySequence="16">
      <Label>Amyloid detection</Label>
      <ChoiceInfo>
        <Choice>
          <Value>0</Value>
          <Label>Cardiac amyloid absent</Label>
        </Choice>
		<Choice>
          <Value>1</Value>
          <Label>Cardiac amyloid present</Label>
        </Choice>
        <Choice>
          <Value>2</Value>
          <Label>Unknown</Label>
        </Choice>
      </ChoiceInfo>
    </ChoiceDataElement> 
	
	<ChoiceDataElement Id="type" IsRequired="true" DisplaySequence="17">
      <Label>Type of amyloid</Label>
      <ChoiceInfo>
        <Choice>
          <Value>0</Value>
          <Label>AL</Label>
        </Choice>
		<Choice>
          <Value>1</Value>
          <Label>ATTR</Label>
        </Choice>
        <Choice>
          <Value>2</Value>
          <Label>Unknown</Label>
        </Choice>
      </ChoiceInfo>
    </ChoiceDataElement>
   </DataElements>
   
  <Rules>
		<DecisionPoint Id="macrodp">
			<Label>Macro Banch</Label>
			<Branch>
				<EqualCondition DataElementId="conditionConst" ComparisonValue="10"/>
				<EndPointRef EndPointId="macroEndpoint"></EndPointRef>
			</Branch>
		</DecisionPoint>		
	</Rules>

	
    <EndPoints>		
	 <TemplatePartial Id ="ExamPartial">
	 	<Branch>
	 		<ReportText Type="PlainText">EXAM TYPE: Evaluation of Cardiac Amyloid Evaluation</ReportText>
	 		<ReportText Type="Newline"></ReportText>
	 		<ReportText Type="PlainText">INDICATION: detailed examination </ReportText>
	 		<ReportText Type="Newline"></ReportText>
	 		<ReportText Type="PlainText" >COMPARISON: NONE </ReportText>
	 		<ReportText Type="Newline"></ReportText>
	 	</Branch>
	 </TemplatePartial>


	<EndPoint Id="macroEndpoint">
		<Label>A</Label>
		<ReportSections>
			<ReportSection SectionId="findings">
				<Branch>
					<ReportText Type="InsertPartialTemplate" Value="ExamPartial"></ReportText>
					<ReportText Type="Newline"/>
					<ReportText Type="PlainText">Evaluation of Cardiac Amyloid evaluation results:</ReportText>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="Age" />
					<ReportText Type="PlainText"> Patient's age: </ReportText>
					<ReportText Type="InsertDataElementValue" Value="Age"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="Sex" />
					<ReportText Type="PlainText"> Patient's sex: </ReportText>
					<ReportText Type="InsertDataElementValue" Value="Sex"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="rib" />
					<ReportText Type="PlainText"> Rib trauma: </ReportText>   
					<ReportText Type="InsertDataElementValue" Value="rib"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="mets" />
					<ReportText Type="PlainText"> Rib/bone metastases: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="mets"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="dex" />
					<ReportText Type="PlainText"> Dextrocardia: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="dex"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="rate" />
					<ReportText Type="PlainText"> Heart rate: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="rate"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="lv" />
					<ReportText Type="PlainText"> LV wall thickness: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="lv"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="volume" />
					<ReportText Type="PlainText"> LV  end-diastolic volume: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="volume"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="fraction" />
					<ReportText Type="PlainText"> LV ejection fraction: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="fraction"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="atrial" />
					<ReportText Type="PlainText"> Atrial enlargement: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="atrial"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="peri" />
					<ReportText Type="PlainText"> Pericaridal effusion: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="peri"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="pleural" />
					<ReportText Type="PlainText"> Pleural effusions: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="pleural"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="hyper" />
					<ReportText Type="PlainText"> Left ventricular hypertrophy: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="hyper"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="myo" />
					<ReportText Type="PlainText"> Myocardial Tc-99m PYP cardiac uptake: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="myo"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="ratio" />
					<ReportText Type="PlainText"> Heart to contralateral ratio: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="ratio"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="amyloid" />
					<ReportText Type="PlainText"> Amyloid detection: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="amyloid"/>
					<ReportText Type="Newline"/>
				</Branch>
				<Branch>
				    <SectionIf DataElementId="type" />
					<ReportText Type="PlainText"> Type of amyloid: </ReportText> 
					<ReportText Type="InsertDataElementValue" Value="type"/>
					<ReportText Type="Newline"/>
				</Branch>
				
				</ReportSection>
		</ReportSections>
		</EndPoint>	
	</EndPoints>
	</ReportingModule>