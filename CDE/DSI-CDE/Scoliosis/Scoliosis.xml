  <DataElements>
    <NumericDataElement
      Id="CobbAngle"
      IsRequired="true"
      DisplaySequence="1">
      <Label>Cobb Angle</Label>
      <Hint>Measure coronal plane deformity on anteroposterior plane radiographs in the classification of scoliosis (degrees)</Hint>
    </NumericDataElement>
    <NumericDataElement
      Id="PelvicTilt"
      IsRequired="true"
      DisplaySequence="2">
      <Label>Pelvic Tilt</Label>
      <Hint>Angle between the iliac crest to the horizontal (degrees)</Hint>
    </NumericDataElement>
    <ChoiceDataElement
      Id="TriradiateCartilage"
      IsRequired="false"
      DisplaySequence="4">
      <Label>Triradiate Cartilage</Label>
      <Hint>Epiphyseal plate between the ilium, ischium, and pubis to form the acetabulum of the os coxae</Hint>
      <ChoiceInfo>
        <Choice>
          <Value>0-Unknown</Value>
          <Label>0-Unknown</Label>
        </Choice>
        <Choice>
          <Value>1-Open</Value>
          <Label>1-Open</Label>
        </Choice>
        <Choice>
          <Value>2-Closed</Value>
          <Label>2-Closed</Label>
        </Choice>
      </ChoiceInfo>
    </ChoiceDataElement>
    <ChoiceDataElement
      Id="VertebralBodyNumbering"
      IsRequired="false"
      DisplaySequence="5">
      <Label>Vertebral Body Numbering</Label>
      <Hint>Numbering order of the vertebrae of the human spinal column (pixel identification)</Hint>
      <ChoiceInfo>
        <Choice>
          <Value>0-Nonvertebraepixel</Value>
          <Label>0-Non vertebrae pixel</Label>
        </Choice>
        <Choice>
          <Value>1-C1</Value>
          <Label>1-C1</Label>
        </Choice>
        <Choice>
          <Value>2-C2</Value>
          <Label>2-C2</Label>
        </Choice>
        <Choice>
          <Value>3-C3</Value>
          <Label>3-C3</Label>
        </Choice>
        <Choice>
          <Value>4-C4</Value>
          <Label>4-C4</Label>
        </Choice>
        <Choice>
          <Value>5-C5</Value>
          <Label>5-C5</Label>
        </Choice>
        <Choice>
          <Value>6-C6</Value>
          <Label>6-C6</Label>
        </Choice>
        <Choice>
          <Value>7-C7</Value>
          <Label>7-C7</Label>
        </Choice>
        <Choice>
          <Value>8-Th1</Value>
          <Label>8-Th1</Label>
        </Choice>
        <Choice>
          <Value>9-Th2</Value>
          <Label>9-Th2</Label>
        </Choice>
        <Choice>
          <Value>10-Th3</Value>
          <Label>10-Th3</Label>
        </Choice>
        <Choice>
          <Value>11-Th4</Value>
          <Label>11-Th4</Label>
        </Choice>
        <Choice>
          <Value>12-Th5</Value>
          <Label>12-Th5</Label>
        </Choice>
        <Choice>
          <Value>13-Th6</Value>
          <Label>13-Th6</Label>
        </Choice>
        <Choice>
          <Value>14-Th7</Value>
          <Label>14-Th7</Label>
        </Choice>
        <Choice>
          <Value>15-Th8</Value>
          <Label>15-Th8</Label>
        </Choice>
        <Choice>
          <Value>16-Th9</Value>
          <Label>16-Th9</Label>
        </Choice>
        <Choice>
          <Value>17-Th10</Value>
          <Label>17-Th10</Label>
        </Choice>
        <Choice>
          <Value>18-Th11</Value>
          <Label>18-Th11</Label>
        </Choice>
        <Choice>
          <Value>19-Th12</Value>
          <Label>19-Th12</Label>
