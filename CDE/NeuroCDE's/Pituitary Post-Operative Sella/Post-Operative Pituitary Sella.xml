    <DataElements>
        <MultiChoiceDataElement Id="SurgicalApproach" DisplaySequence="1">
            <Label>Surgical Approach</Label>
            <ChoiceInfo>
                <Choice>
                    <Value>Endonasal</Value>
                    <Label>Endonasal</Label>
                </Choice>
                <Choice>
                    <Value>Trans-sphenoidal</Value>
                    <Label>Trans-sphenoidal</Label>
                </Choice>
                <Choice>
                    <Value>Trans-tuberculum</Value>
                    <Label>Trans-tuberculum</Label>
                </Choice>
                <Choice>
                    <Value>Trans-planum</Value>
                    <Label>Trans-planum</Label>
                </Choice>
                <Choice>
                    <Value>Open Craniotomy</Value>
                    <Label>Open Craniotomy</Label>
                </Choice>
            </ChoiceInfo>
        </MultiChoiceDataElement>
        <MultiChoiceDataElement Id="Closure" DisplaySequence="2">
            <Label>Closure</Label>
            <ChoiceInfo>
                <Choice>
                    <Value>vascularized nasoseptal flap</Value>
                    <Label>Vascularized Nasoseptal Flap</Label>
                </Choice>
                <Choice>
                    <Value>intramural fat</Value>
                    <Label>Intradural Fat</Label>
                </Choice>
                <Choice>
                    <Value>dural substitute</Value>
                    <Label>Dural Substitute</Label>
                </Choice>
            </ChoiceInfo>
        </MultiChoiceDataElement>
        <ChoiceDataElement Id="IfVascularizedNasoseptalFlap" DisplaySequence="3">
            <Label>If Vascularized Nasoseptal Flap</Label>
            <ChoiceInfo>
                <Choice>
                    <Value>flap enhances</Value>
                    <Label>Flap Enhances</Label>
                </Choice>
                <Choice>
                    <Value>flap does not enhance, suggesting flap failure</Value>
                    <Label>Flap Does Not Enhance/Flap Failure</Label>
                </Choice>
            </ChoiceInfo>
        </ChoiceDataElement>
        <MultiChoiceDataElement Id="ReconstructionFailure" DisplaySequence="4">
            <Label>Reconstruction Failure</Label>
            <ChoiceInfo>
                <Choice>
                    <Value>The flap has migrated from the superior defect.</Value>
                    <Label>Flap Migration from Superior Defect</Label>
                </Choice>
                <Choice>
                    <Value>A fistula has formed.</Value>
                    <Label>Fistula</Label>
                </Choice>
                <Choice>
                    <Value>A foreign body is noted between the flap and the surgical defect.</Value>
                    <Label>Foreign Body between Flap and Defect</Label>
                </Choice>
                <Choice>
                    <Value>The flap is apposed to the surgical defect and appears healthy.</Value>
                    <Label>Healthy Appearance</Label>
                </Choice>
            </ChoiceInfo>
        </MultiChoiceDataElement>
        <NumericDataElement Id="ResidualDisease" DisplaySequence="5" Unit="%">
            <Label>Amount of Residual Disease</Label>
            <Hint>Percentage of the pre-operative volume </Hint>
        </NumericDataElement>
        <MultiChoiceDataElement Id="LocationofResidualDisease" DisplaySequence="6" AllowFreetext="true">
            <Label>Location of Residual Disease</Label>
            <ChoiceInfo>
                <Choice>
                    <Value>anterior sella</Value>
                    <Label>Anterior Sella</Label>
                </Choice>
                <Choice>
                    <Value>posterior sella</Value>
                    <Label>Posterior Sella</Label>
                </Choice>
                <Choice>
                    <Value>left of midline</Value>
                    <Label>Left</Label>
                </Choice>
                <Choice>
                    <Value>right of midline</Value>
                    <Label>Right</Label>
                </Choice>
                <Choice>
                    <Value>in the midline</Value>
                    <Label>Midline</Label>
                </Choice>
            </ChoiceInfo>
        </MultiChoiceDataElement>
    </DataElements>
