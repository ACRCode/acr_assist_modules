<ReportingModule>
  <Metadata>
    <Label>Scoliosis</Label>
    <ID>Scoliosis</ID>
    <SchemaVersion>1.0</SchemaVersion>
    <ModuleVersion>1.0</ModuleVersion>
    <Info>
      <Diagrams></Diagrams>
      <Description>This module describes the common data elements for scoliosis use case.</Description>
      <References>
        <Citation
          Url="http://radelement.org/"> CDE URL </Citation>
        <Citation
          Url="https://docs.google.com/spreadsheets/d/1mXqXAByeur3C5ud-wbLY2vggB29-nSxU5nYpoInGsK4/edit#gid=891834841">
              CDE google sheet </Citation>
      </References>
      <Contact>
        <Name>Matt Hawkins, MD</Name>
        <Email>DSIUseCases@acr.org</Email>
        <Institution>ACR</Institution>
      </Contact>
    </Info>
  </Metadata>
  <DataElements>
    <NumericDataElement
      Id="CobbAngle"
      IsRequired="true"
      DisplaySequence="1">
      <Label>Cobb Angle</Label>
      <Hint>Measure coronal plane deformity on anteroposterior plane radiographs in the classification of scoliosis (degrees)</Hint>
    </NumericDataElement>
    <NumericDataElement
      Id="PelvicTilt"
      IsRequired="true"
      DisplaySequence="2">
      <Label>Pelvic Tilt</Label>
      <Hint>Angle between the iliac crest to the horizontal (degrees)</Hint>
    </NumericDataElement>
    <ChoiceDataElement
      Id="TriradiateCartilage"
      IsRequired="false"
      DisplaySequence="4">
      <Label>Triradiate Cartilage</Label>
      <Hint>Epiphyseal plate between the ilium, ischium, and pubis to form the acetabulum of the os coxae</Hint>
      <ChoiceInfo>
        <Choice>
          <Value>0Unknown</Value>
          <Label>0 Unknown</Label>
        </Choice>
        <Choice>
          <Value>1Open</Value>
          <Label>1 Open</Label>
        </Choice>
        <Choice>
          <Value>2Closed</Value>
          <Label>2 Closed</Label>
        </Choice>
      </ChoiceInfo>
    </ChoiceDataElement>
    <ChoiceDataElement
      Id="VertebralBodyNumbering"
      IsRequired="false"
      DisplaySequence="5">
      <Label>Vertebral Body Numbering</Label>
      <Hint>Numbering order of the vertebrae of the human spinal column (pixel identification)</Hint>
      <ChoiceInfo>
        <Choice>
          <Value>0Nonvertebraepixel</Value>
          <Label>0 Non vertebrae pixel</Label>
        </Choice>
        <Choice>
          <Value>1C1</Value>
          <Label>1 C1</Label>
        </Choice>
        <Choice>
          <Value>2C2</Value>
          <Label>2 C2</Label>
        </Choice>
        <Choice>
          <Value>3C3</Value>
          <Label>3 C3</Label>
        </Choice>
        <Choice>
          <Value>4C4</Value>
          <Label>4 C4</Label>
        </Choice>
