          <Value>6C6</Value>
          <Label>6 C6</Label>
        </Choice>
        <Choice>
          <Value>7C7</Value>
          <Label>7 C7</Label>
        </Choice>
        <Choice>
          <Value>8Th1</Value>
          <Label>8 Th1</Label>
        </Choice>
        <Choice>
          <Value>9Th2</Value>
          <Label>9 Th2</Label>
        </Choice>
        <Choice>
          <Value>10Th3</Value>
          <Label>10 Th3</Label>
        </Choice>
        <Choice>
          <Value>11Th4</Value>
          <Label>11 Th4</Label>
        </Choice>
        <Choice>
          <Value>12Th5</Value>
          <Label>12 Th5</Label>
        </Choice>
        <Choice>
          <Value>13Th6</Value>
          <Label>13 Th6</Label>
        </Choice>
        <Choice>
          <Value>14Th7</Value>
          <Label>14 Th7</Label>
        </Choice>
        <Choice>
          <Value>15Th8</Value>
          <Label>15 Th8</Label>
        </Choice>
        <Choice>
          <Value>16Th9</Value>
          <Label>16 Th9</Label>
        </Choice>
        <Choice>
          <Value>17Th10</Value>
          <Label>17 Th10</Label>
        </Choice>
        <Choice>
          <Value>18Th11</Value>
          <Label>18 Th11</Label>
