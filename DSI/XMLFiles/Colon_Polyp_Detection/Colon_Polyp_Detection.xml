   <DataElements>
      <ChoiceDataElement Id="PolypDetection(≥6mm)" IsRequired="true" DisplaySequence="1">
         <Label>Polyp Detection ( ≥ 6 mm)</Label>
         <Hint>Detection of polyps ≥ 6 mm</Hint>
         <ChoiceInfo>
            <Choice>
               <Value>0Unknown</Value>
               <Label>0 Unknown</Label>
            </Choice>
            <Choice>
               <Value>1Zeropolyps>6mm</Value>
               <Label>1 Zero polyps > 6 mm</Label>
            </Choice>
            <Choice>
               <Value>2Onepolyp>6mm</Value>
               <Label>2 One polyp > 6 mm</Label>
            </Choice>
            <Choice>
               <Value>3TwoOrmorepolyps>6mm</Value>
               <Label>3 Two or more polyps > 6 mm</Label>
            </Choice>
         </ChoiceInfo>
      </ChoiceDataElement>
   </DataElements>
   <Rules>
      <DecisionPoint Id="macrodp">
         <Label>Macro Banch</Label>
         <Branch>
            <EqualCondition DataElementId="conditionConst" ComparisonValue="10" />
            <EndPointRef EndPointId="macroEndpoint" />
         </Branch>
      </DecisionPoint>
   </Rules>
   <EndPoints>
      <EndPoint Id="macroEndpoint">
         <Label>A</Label>
         <ReportTexts>
            <ReportText SectionId="findings">Sample Report Text</ReportText>
         </ReportTexts>
      </EndPoint>
   </EndPoints>
